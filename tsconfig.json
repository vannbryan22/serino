{
  "compilerOptions": {
    "lib": ["es2021"],
    "target": "es2021",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "rootDir": "./src"
  },
  "include": [
    "src/**/*.ts",
    "src/assets/**/*" // Include all files in the 'public' folder within 'src'
  ]
}

